<table>
  <tr>
    <th>
      Email
    <th>
    <th>
      Actions
    </th>
  </tr>
  <% users.each do |user| %>
    <tr>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= link_to("Edit", edit_user_path(user)) %>
        <%= button_to("Delete", user_path(user), :method => :delete, :confirm => "Are you sure you want to delete #{user.email}?") %>
      </td>
    </tr>
  <% end %>
</table>