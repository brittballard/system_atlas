<h4>Manage relationships for application <%= @parent.id %></h4>
<div class='relationship-manager left'>
  <% if @parent.entity_relationships.count == 0 %>
    This application currently has no children.
  <% else %>
    <ul class="unstyled">
      <% @parent.entity_relationships.each do |entity_relationship| %>
        <li class="entity">
          Name: <%= entity_relationship.child.name %>
          Type: <%= entity_relationship.child.entity_definition_type %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class='relationship-manager right'>
  <% if @entities.count == 0 %>
    This application is already related to all available applications.
  <% else %>
  <ul class="unstyled">
    <% @entities.each do |entity| %>
      <li class="entity">
        Name: <%= entity.entity_definition.name %><br />
        Type: <%= entity.entity_definition_type %>
      </li>
    <% end %>
  </ul>
  <% end %>
</div>
