<% content_for :javascript_includes do %>
  jQuery(document).ready(function() {
    SystemAtlas.views.relatipnshipsManage(<%= @parent.id %>);
  });
<% end %>

<div id="status">
</div>

<div id=<%= "entity-#{@parent.id}" %> data-id='<%= @parent.id %>' data-create_url='<%= entity_relationships_path(@parent) %>' class='container ui-widget-header droppable'>
  Id: <%= @parent.id %>
  <div class="section-header">
    Related Applications
  </div>
  <div class="section-content">
    <ul id="child-entities" class="entity-list">
      <% @parent.entity_relationships.each do |entity_relationship| %>
        <li class="ui-state-highlight" 
            data-id='<%= entity_relationship.id %>'
            data-delete_url='<%= entity_relationship_path(@parent, entity_relationship) %>'>
          <div id=<%= "entity-#{entity_relationship.child.id}" %>
                class="ui-widget-content draggable entity">
            Id: <%= entity_relationship.child.id %>
          </div>
        </li>
      <% end %>
    <ul>
  </div>
</div>

<div id='unassigned-entities' class='container' data-parent_id=<%= @parent.id %>>
  <div class="section-header">
    Application Palette
  </div>
  <div class="section-content">
    <ul id='available-entities' class="entity-list">
      <% @entities.each do |entity| %>
        <li class="ui-state-highlight" data-id='<%= entity.id %>'>
          <div id=<%= "entity-#{entity.id}" %>
                class="ui-widget-content draggable entity">
            Id: <%= entity.id %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>