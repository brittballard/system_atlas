<% @ids.each do |id| %>
  $("[data-role='child-container'] [data-relationship-id*='<%= id %>']").fadeOut();
<% end %>

<% @children.each do |child| %>
  var newEntity = $("<%= j render("relationships/item_templates/#{child.entity_definition.class.table_name}_create", formats: [:html], entity: child) %>").hide();
  $("[data-role='entity-list']").append(newEntity);
  newEntity.fadeIn();
<% end %>

