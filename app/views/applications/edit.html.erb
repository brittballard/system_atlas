<h4>Application</h4>
<%= form_for(@application) do |form| %>
  <%= form.fields_for(:entity, @application.entity) do |entity_fields| %>
    <%= render(partial: 'entities/form',
               locals: { form: entity_fields,
                 select_object: 'application[entity_attributes]' }) %>
  <% end %>
  <%= render(partia: form, locals: { form: form })%>
  <%= form.submit :edit, class: 'btn btn-primary' %>
<% end %>
