<% form_for(@business_unit) do |form| %>
  <% form.fields_for(:entity, Entity.new) do |entity_fields| %>
    <%= render(:partial => 'entities/form', :locals => { :form => entity_fields, :select_object => 'business_unit[entity_attributes]' }) %>
  <% end %>
  <%= render(:partial => form, :locals => { :form => form })%>
  <%= form.submit :create %>
<% end %>