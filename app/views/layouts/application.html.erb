<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <title><%= h(yield(:title) || "System Atlas") %></title>
        <%= stylesheet_link_tag('system_atlas', :media => 'all') %>
    </head>
    <body>
      <div id="container-outer">
          <div id="header">
            <% if current_user.present? %>
            <div class="utility">
                <div class="item">Welcome <%= current_user.email %></div>
                <div class="divider"></div>
                <div class="item"><%= current_user.organization.name  %></div>
                <div class="divider"></div>
                <div class="item"><%= link_to "Logout", destroy_user_session_path %></div>
            </div>
            <% end %>
            <div class="logo">
                <%= image_tag "Image-Logo.png" %>
            </div>
          </div>
          <div id="nav">
            <%= render(:partial => 'layouts/navigation') %>
          </div>          
        <div id="main-content">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <p class="alert"><%= flash[:error] %></p>
          <%= yield %>
        </div>
        <div id="footer">
              footer
        </div>
      </div>
      <%= javascript_include_tag "application" %>
      <%= yield :javascript_includes %>
  </body>
</html>
